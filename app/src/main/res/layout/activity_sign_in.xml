<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <import type="android.view.View" />

    <variable
            name="consumerViewModel"
            type="com.hangloose.viewmodel.ConsumerViewModel" />
</data>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        tools:context="com.hangloose.ui.activities.SignInActivity">


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" app:srcCompat="@drawable/ic_thumb"/>

    <TextView
            android:id="@+id/textView"
            style="@style/text16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="200dp"
            android:text="@string/sign_in_with_social"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/btnFacebook"
            android:layout_width="133dp"
            android:layout_height="58dp"
            android:contentDescription="TODO" android:scaleType="center"
            android:src="@drawable/ic_facebook"
            android:background="@drawable/rounded_facebook"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="232dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>

    <ImageView
            android:id="@+id/btnGoogle"
            android:layout_width="133dp"
            android:layout_height="58dp"
            android:layout_marginTop="232dp"
            android:background="@drawable/rounded_google"
            android:contentDescription="TODO" android:scaleType="center"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_google"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>

    <View
            android:layout_height="1dp"
            android:background="@color/colorSeperator"
            android:id="@+id/view"
            android:layout_width="118dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="312dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="@string/or"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp"
            android:textColor="@android:color/white"
            style="@style/text16"
            app:layout_constraintStart_toEndOf="@+id/view"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/view2"
            android:layout_marginEnd="8dp"/>

    <View
            android:layout_width="118dp"
            android:layout_height="1dp"
            android:id="@+id/view2"
            android:background="@color/colorSeperator"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="312dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textColorHint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/your_phone"
                android:inputType="phone"
                android:id="@+id/editPhone"
                android:maxLength="10"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textColorHint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textInputLayout2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:id="@+id/editPassword"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>

    <Button
            android:text="@string/sign_in"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:id="@+id/btnSignIn"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@drawable/rounded_sign_in"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:onClick="@{consumerViewModel::onSignInClick}"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="52dp"/>

    <TextView
            android:text="@string/dont_have_an_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            style="@style/text16"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="22dp"/>


</android.support.constraint.ConstraintLayout>
</layout>