<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <co.ceryle.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/segmentedButtonGroup"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sbg_backgroundColor="@color/white"
        app:sbg_borderColor="@color/colorPrimary"
        app:sbg_borderSize="1dp"
        app:sbg_dividerColor="@color/colorPrimary"
        app:sbg_dividerPadding="10dp"
        app:sbg_dividerRadius="5dp"
        app:sbg_dividerSize="1dp"
        app:sbg_position="0"
        app:sbg_radius="5dp"
        app:sbg_ripple="true"
        app:sbg_rippleColor="@color/colorPrimary"
        app:sbg_selectorColor="@color/colorPrimary">

        <co.ceryle.segmentedbutton.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            app:sb_text="Button 1"
            app:sb_textColor="@color/black"
            app:sb_textColor_onSelection="@color/white" />

        <co.ceryle.segmentedbutton.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:sb_text="Button 2"
            app:sb_textColor="@color/black"
            app:sb_textColor_onSelection="@color/white"
            tools:layout_editor_absoluteX="130dp" />

        <co.ceryle.segmentedbutton.SegmentedButton
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            app:sb_text="Button 3"
            app:sb_textColor="@color/black"
            app:sb_textColor_onSelection="@color/white" />

    </co.ceryle.segmentedbutton.SegmentedButtonGroup>

    <com.mindorks.placeholderview.SwipePlaceHolderView
        android:id="@+id/swipeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segmentedButtonGroup"/>
</android.support.constraint.ConstraintLayout>
